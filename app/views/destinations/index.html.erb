<p id="notice"><%= notice %></p>

<h1>Destinations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>City</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @destinations.each do |destination| %>
      <tr>
        <td><%= destination.city %></td>
        <td><%= destination.country %></td>
        <td><%= link_to 'View article', destination, class: "btn btn-primary " %></td>
        <td><%= link_to 'Edit Article', edit_destination_path(destination), class: "btn btn-success" %></td>
        <td><%= link_to 'Delete Article', destination, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Destination', new_destination_path, class: "btn btn-primary"%>
